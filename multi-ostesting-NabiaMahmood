name: Multi-OS Testing - Nabia Mahmood

on:
  push:
    branches:
      - main

jobs:
  test-ubuntu:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Testing on Ubuntu
        run: |
          echo "Testing on Ubuntu..."
          uname -a
          echo "Ubuntu test by Nabia Mahmood" > test-ubuntu.txt
          cat test-ubuntu.txt
          echo "Ubuntu tests completed"

  test-windows:
    runs-on: windows-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Testing on Windows
        run: |
          echo "Testing on Windows..."
          systeminfo | findstr /B /C:"OS Name" /C:"OS Version"
          echo Windows test by Nabia Mahmood > test-windows.txt
          type test-windows.txt
          echo "Windows tests completed"
